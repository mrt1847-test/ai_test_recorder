{
  "manifest_version": 3,
  "name": "AI Test Recorder - UI Pro",
  "version": "1.0",
  "description": "Improved UI/UX AI Test Recorder (DevTools+Popup)",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  "devtools_page": "devtools.html",
  "action": {
    "default_title": "AI Test Recorder",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "style.css", "vendor/**/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*/*"
    ]
  }
}